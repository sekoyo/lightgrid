{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["DOM", "DOM.Iterable", "es2022"],
    "module": "ES2020",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "noEmit": true,
    "rootDir": ".",
    "outDir": "dist",
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@lightgrid/react/dist/style.css": ["../core/dist/style.css"],
      "@lightgrid/react": ["./src/lib"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
